{
  "name": "helpful-information",
  "homepage": "https://helpfulinformation.redcross.nl/",
  "scripts": {
    "ionic": "ionic",
    "ng": "ng",
    "prepare": "husky install",
    "start": "ng serve --port 0",
    "set-env-variables": "node ./_set-env-variabes.js",
    "prebuild": "npm run set-env-variables",
    "build": "ng build",
    "build:production": "npm run build -- --prod",
    "preserve:production": "cp www/index.html www/404.html",
    "serve:production": "npx http-server ./www/ -c-1",
    "start:production": "npm run build:production && npm run serve:production",
    "test": "npm run lint && ng test --no-watch --browsers=ChromeHeadless --code-coverage",
    "test:dev": "ng test --code-coverage",
    "lint": "npm run lint:syntax && ng lint",
    "lint:syntax": "prettier --check \"**/*.{md,js,json,ts,scss,html}\"",
    "fix:syntax": "npm run lint:syntax -- --write"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^8.2.14",
    "@angular/core": "^8.2.14",
    "@angular/forms": "^8.2.14",
    "@angular/platform-browser": "^8.2.14",
    "@angular/platform-browser-dynamic": "^8.2.14",
    "@angular/pwa": "~0.803.29",
    "@angular/router": "^8.2.14",
    "@angular/service-worker": "^8.2.14",
    "@ionic/angular": "^4.11.13",
    "@ionic/cli": "^6.18.1",
    "@microsoft/applicationinsights-web": "^2.5.9",
    "core-js": "2.6.8",
    "rxjs": "^6.6.2",
    "tslib": "^1.12.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.803.29",
    "@angular-devkit/build-angular": "~0.803.29",
    "@angular-devkit/core": "^8.3.29",
    "@angular-devkit/schematics": "^8.3.29",
    "@angular/cli": "^8.3.29",
    "@angular/compiler": "^8.2.14",
    "@angular/compiler-cli": "^8.2.14",
    "@angular/language-service": "^8.2.14",
    "@ionic/angular-toolkit": "^2.1.2",
    "@types/jasmine": "^3.5.12",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "14.x",
    "codelyzer": "^5.0.1",
    "husky": "^7.0.4",
    "jasmine-core": "^3.5.0",
    "jasmine-spec-reporter": "~5.0.2",
    "karma": "^5.1.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "~3.3.1",
    "karma-jasmine-html-reporter": "^1.5.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "ts-node": "~9.1.0",
    "tslint": "~5.20.1",
    "typescript": "~3.5.3"
  },
  "lint-staged": {
    "*.{md,js,json,ts,scss,html}": "prettier --write"
  }
}
